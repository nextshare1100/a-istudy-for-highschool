'use client'

import { useEffect, useState } from 'react'
import { useRouter } from 'next/navigation'
import { auth } from '@/lib/firebase/config'
import { onAuthStateChanged } from 'firebase/auth'

export default function HomePage() {
  const router = useRouter()
  const [user, setUser] = useState<any>(null)
  const [loading, setLoading] = useState(true)

  useEffect(() => {
    const unsubscribe = onAuthStateChanged(auth, (user) => {
      if (user) {
        setUser(user)
      } else {
        router.push('/login')
      }
      setLoading(false)
    })

    return () => unsubscribe()
  }, [router])

  if (loading) {
    return (
      <div className="page-container flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-white mx-auto"></div>
          <p className="mt-4 text-white">読み込み中...</p>
        </div>
      </div>
    )
  }

  return (
    <div className="page-container animate-fade-in p-8">
      <div className="max-w-6xl mx-auto">
        
        {/* ヘッダー */}
        <header className="card-custom" style={{ marginBottom: '10px' }}>
          <div className="flex justify-between items-center">
            <h1 className="text-2xl font-bold gradient-text">A-IStudy</h1>
            <button 
              onClick={() => {
                auth.signOut()
                router.push('/login')
              }}
              className="px-4 py-2 text-sm bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all"
            >
              ログアウト
            </button>
          </div>
        </header>

        {/* タイトル */}
        <div className="text-center text-white" style={{ marginBottom: '10px' }}>
          <h2 className="text-4xl font-bold mb-2">ダッシュボード</h2>
          <p className="text-lg opacity-90">今日も一緒に学習を頑張りましょう！</p>
        </div>

        {/* ユーザー情報 */}
        <div className="card-custom" style={{ marginBottom: '10px' }}>
          <h3 className="text-lg font-bold mb-3 flex items-center">
            <span className="text-2xl mr-2">👤</span>
            プロフィール
          </h3>
          <div className="space-y-1">
            <p className="text-sm">
              メールアドレス: <span className="font-medium text-purple-600">{user?.email}</span>
            </p>
            <p className="text-xs text-gray-500">
              ユーザーID: {user?.uid}
            </p>
          </div>
        </div>

        {/* アクションカード - 10pxギャップ */}
        <div className="grid grid-cols-1 md:grid-cols-3" style={{ gap: '10px', marginBottom: '10px' }}>
          <div className="card-custom group">
            <h3 className="text-lg font-bold mb-2 flex items-center">
              <span className="text-2xl mr-2">📚</span>
              AI学習を開始
            </h3>
            <p className="text-sm text-gray-600 mb-4">AIが最適な問題を選んで出題します</p>
            <button className="btn-primary w-full text-sm">
              学習を始める
            </button>
          </div>

          <div className="card-custom group">
            <h3 className="text-lg font-bold mb-2 flex items-center">
              <span className="text-2xl mr-2">📈</span>
              学習進捗
            </h3>
            <p className="text-sm text-gray-600 mb-4">あなたの成長を確認しましょう</p>
            <button className="btn-secondary w-full text-sm">
              進捗を見る
            </button>
          </div>

          <div className="card-custom group">
            <h3 className="text-lg font-bold mb-2 flex items-center">
              <span className="text-2xl mr-2">📅</span>
              学習スケジュール
            </h3>
            <p className="text-sm text-gray-600 mb-4">今日の予定を確認</p>
            <button className="btn-secondary w-full text-sm">
              スケジュール確認
            </button>
          </div>
        </div>

        {/* 統計情報 - 10pxギャップ */}
        <div className="grid grid-cols-2 md:grid-cols-4" style={{ gap: '10px' }}>
          <div className="card-custom text-center">
            <p className="text-xs text-gray-600">今週の学習時間</p>
            <p className="text-xl font-bold gradient-text mt-1">12.5時間</p>
          </div>
          <div className="card-custom text-center">
            <p className="text-xs text-gray-600">完了した問題</p>
            <p className="text-xl font-bold gradient-text mt-1">156問</p>
          </div>
          <div className="card-custom text-center">
            <p className="text-xs text-gray-600">正答率</p>
            <p className="text-xl font-bold gradient-text mt-1">78%</p>
          </div>
          <div className="card-custom text-center">
            <p className="text-xs text-gray-600">連続学習日数</p>
            <p className="text-xl font-bold gradient-text mt-1">7日</p>
          </div>
        </div>

      </div>
    </div>
  )
}
